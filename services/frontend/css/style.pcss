@tailwind base;

@tailwind components;

@tailwind utilities;

@layer base {
    h1 {
        @apply text-4xl text-indigo-700 font-bold
    }

    h2 {
        @apply text-xl font-medium text-gray-900;
    }

    h3 {
        @apply text-lg font-medium;
    }

    a {
        @apply text-blue-700;
    }

    table {
        @apply border-collapse border-2 border-gray-500;
    }

    th {
        @apply border border-gray-400 px-4 py-2 text-gray-800;
    }

    td {
        @apply border border-gray-400 px-4 py-2 text-center;
    }

    pre {
        @apply p-2 m-2 border-2 border-gray-400;
    }
}
